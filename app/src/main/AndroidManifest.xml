<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 앱에서 진동 알림 주기 허용 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 지문 인식 권한 -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

   <!-- <uses-permission android:name="android.permission.CAMERA"/> 카메라 권한-->
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>    <!--저장소 읽기 권한-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>    <!--저장소 쓰기 권한-->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Graduation"
        tools:targetApi="31">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.graduation.fileprovider"
            android:grantUriPermissions="true"
            android:exported="false">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
            <meta-data
                android:name="com.google.firebase.ml.vision.DEPENDENCIES"
                android:value="ocr" />
        </provider>
        <activity
            android:name=".TransferActivity"
            android:exported="false"
            android:label="@string/title_activity_transfer"
            android:theme="@style/Theme.Graduation" />
        <activity
            android:name=".FingerLoginActivity"
            android:exported="false"
            android:label="@string/title_activity_finger_login"
            android:theme="@style/Theme.Graduation" />
        <activity
            android:name=".SplashSoundActivity"
            android:exported="true"></activity>
        <activity
            android:name=".PayFingerActivity"
            android:exported="false" />
        <activity
            android:name=".SignupCheckPwdActivity"
            android:exported="false" />
        <activity
            android:name=".SignupPwdActivity"
            android:exported="true" />
        <activity
            android:name=".SignupEmailActivity"
            android:exported="false" />
        <activity
            android:name=".SignupNameActivity"
            android:exported="false" />
        <activity
            android:name=".LoginPwdActivity"
            android:exported="false" />
        <activity
            android:name=".LoginEmailActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ChangePwdActivity"
            android:exported="false"
            android:label="@string/title_activity_change_pwd"
            android:theme="@style/Theme.Graduation" />
        <activity
            android:name=".DeletePayActivity"
            android:exported="false" />
        <activity
            android:name=".CheckPayInfoActivity"
            android:exported="false" />
        <activity
            android:name=".AuthWayActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterMainActivity"
            android:exported="true" />
        <activity
            android:name=".ChoosePayMethodActivity"
            android:exported="true"></activity>
        <activity
            android:name=".ServiceAgreementActivity"
            android:exported="false"
            android:label="@string/title_activity_service_agreement"
            android:theme="@style/Theme.Graduation" />
        <activity
            android:name=".PayConfirmationActivity"
            android:exported="false" />
        <activity
            android:name=".PayPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".MyInfoActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>