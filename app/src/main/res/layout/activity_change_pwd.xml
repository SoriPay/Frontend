<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePwdActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <android.widget.Button
        android:id="@+id/previousBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="@string/previous_text"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#DD1717"
        android:text="비밀번호 변경"
        android:textSize="@dimen/title"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_height="400dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/stroke"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"

        >

        <android.widget.Button
            android:id="@+id/notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/grey_notice"
            android:padding="10dp"
            android:text="음량 버튼을 조절하여 숫자를 입력할 수 있습니다."
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_password1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/img_password" />

            <ImageView
                android:id="@+id/img_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/img_password" />

            <ImageView
                android:id="@+id/img_password3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/img_password" />

            <ImageView
                android:id="@+id/img_password4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/img_password" />

            <ImageView
                android:id="@+id/img_password5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/img_password" />

            <ImageView
                android:id="@+id/img_password6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_password" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="70dp">

            <android.widget.Button
                android:id="@+id/enterBtn"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:background="@drawable/stroke"
                android:text="입력"
                android:textSize="20sp" />

            <android.widget.Button
                android:id="@+id/deleteBtn"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:background="@drawable/stroke"
                android:text="지우기"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <android.widget.Button
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="@string/next_text"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@color/white"/>
</LinearLayout>