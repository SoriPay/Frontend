<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckPayInfoActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <android.widget.Button
        android:id="@+id/prev_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="@string/previous_text"
        android:textSize="20sp"
        android:padding="15dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white" />



    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="결제 정보 확인"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/place_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="결제업체명: "
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/sub_title" />
    <TextView
        android:id="@+id/product_place_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="0000"
        android:gravity="center"
        android:textSize="@dimen/sub_title"
        android:textStyle="bold"
        android:textColor="@color/blue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="50dp"
        android:paddingBottom="20dp"
        android:background="@drawable/round_white_bg">


       <!-- <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_product" />

            <TextView
                android:id="@+id/product_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="명: "
                android:textSize="@dimen/sub_title" />

            <TextView
                android:id="@+id/product_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="아메리카노"
                android:textSize="@dimen/sub_title" />
        </LinearLayout>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_money_color" />

            <TextView
                android:id="@+id/price_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="금액: "
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title" />

            <TextView
            android:id="@+id/product_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="4500원"
                android:textStyle="bold"
                android:textColor="@color/blue"
            android:textSize="@dimen/sub_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/account_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_withdraw_color" />

            <TextView
                android:id="@+id/account_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출금 계좌: "
                android:textSize="@dimen/sub_title"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <TextView
            android:id="@+id/product_account_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="133133-31-333"
            android:textSize="@dimen/sub_title"
                android:textStyle="bold"
                android:textColor="@color/blue"
            android:layout_marginBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_status_color" />

            <TextView
                android:id="@+id/status_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상태: "
                android:textSize="@dimen/sub_title"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결제 중"
                android:textColor="@color/red"
                android:textSize="@dimen/sub_title"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/explain_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/grey_notice"
        android:gravity="center"
        android:paddingLeft="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="80dp"
        android:text="해당 결제 정보를 확인하셨다면\n화면 하단의 다음 버튼을\n클릭해주세요." />



    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <android.widget.Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="다음"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@color/white"/>
</LinearLayout>

