<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayPasswordActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="@string/previous_text"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#DD1717"
        android:text="비밀번호 입력"
        android:textSize="@dimen/title"
        android:textStyle="bold" />



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/img_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/img_password" />
    <ImageView
        android:id="@+id/img_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/img_password" />
    <ImageView
        android:id="@+id/img_password3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/img_password" />
    <ImageView
        android:id="@+id/img_password4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/img_password" />
    <ImageView
        android:id="@+id/img_password5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/img_password" />
    <ImageView
        android:id="@+id/img_password6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_password" />
</LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/stroke"
        android:layout_margin="10dp"

        >

    <Button
        android:id="@+id/initialization_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sub_title"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:text="초기화"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_minus"

                android:backgroundTint="#00FFFFFF"
                android:layout_gravity="center"
                android:layout_marginRight="20dp">
            </ImageButton>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:text="7"
                android:textStyle="bold"
                android:textSize="50dp"
                android:gravity="center"
                android:background="@drawable/stroke"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/img_plus" >


            </ImageButton>



        </LinearLayout>
    <TextView
        android:id="@+id/password_notice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="왼쪽/오른쪽으로 화면을 기울여서 숫자를 입력할 수 있고\n위쪽으로 기울이면 입력된 숫자를 0으로 초기화할 수 있습니다."/>



</LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <android.widget.Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="@string/next_text"
        android:textColor="@color/white"/>
</LinearLayout>