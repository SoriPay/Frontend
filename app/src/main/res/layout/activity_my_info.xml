<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/myInfoContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <android.widget.Button
        android:id="@+id/prev_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="@string/previous_text"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="등록된 결제 수단"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="@dimen/title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/password_notice_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/grey_notice"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="50dp"
        android:text="왼쪽 또는 오른쪽으로 넘기면\n등록된 결제 수단을 확인할 수 있습니다." />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="70dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/ic_double_arrow_prev"></ImageButton>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="280dp"
            android:layout_height="150dp"
            android:background="@drawable/stroke_round_yellow"
            android:gravity="center"
            android:text="은행계좌 또는 카드명\n\n계좌번호 앞자리\n또는\n카드번호 앞 4자리" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/ic_double_arrow_next">


        </ImageButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/changePwd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:text="비밀번호 변경"
            android:textColor="@color/black"
            android:layout_marginRight="50dp"/>

        <Button
            android:id="@+id/managePay_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="결제수단 관리" />

    </LinearLayout>
    <android.widget.Button
        android:id="@+id/delete_account_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/transparent_with_navy_stroke"
        android:gravity="center"
        android:paddingLeft="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="100dp"
        android:text="회원 탈퇴"
        android:textSize="20sp"/>


