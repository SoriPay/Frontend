<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayApprovedActivity"
    android:orientation="vertical">

    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="@string/previous_text"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="결제 승인 확인"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/payment_place_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="결제업체명"
        android:textSize="@dimen/sub_title"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/payment_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="상품이름"
        android:layout_marginRight="50dp"
        android:textSize="@dimen/sub_title"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/payment_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제 금액"
        android:textSize="@dimen/sub_title"
        android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/chosen_payment_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택된 은행계좌 또는 카드명"
        android:textSize="@dimen/sub_title"
        android:layout_marginBottom="20dp"/>


    <TextView
        android:id="@+id/chosen_payment_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계좌번호 뒷자리 또는 카드번호 앞 4자리"
        android:textSize="@dimen/sub_title"
        android:layout_marginBottom="20dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <android.widget.Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:text="결제 승인"
        android:textColor="@color/white"/>

</LinearLayout>