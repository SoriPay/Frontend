<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/fl_bottom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.widget.Button
        android:id="@+id/prev_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_style"
        android:backgroundTint="@null"
        android:padding="15dp"
        android:text="@string/previous_text"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_delete_account_confirmation"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="322dp"
            android:layout_height="182dp"
            android:gravity="center"
            android:text="정말로 탈퇴하시겠습니까?\n\n탈퇴하려면 하단의 탈퇴 버튼을,\n이전 화면으로 돌아가려면\n상단의 이전 버튼을 눌러주세요."
            android:textSize="20sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <android.widget.Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rectangle_style"
        android:padding="15dp"
        android:text="탈퇴하기"
        android:textColor="@color/white"
        android:textSize="20sp" />
</FrameLayout>