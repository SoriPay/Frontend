<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="좋은 하루 보내세요"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이유경 님"
                android:textSize="20dp"
                android:layout_marginLeft="30dp">

            </TextView>
            <android.widget.Button
                android:id="@+id/pay_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_round"
                android:text="결제하기"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"
                android:drawableLeft="@drawable/ic_wallet"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:paddingLeft="30dp"
                android:drawablePadding="-30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp" />

            <android.widget.Button
                android:id="@+id/register_pay_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_round"
                android:text="결제수단 등록"
                android:textColor="@color/black"
                android:textSize="@dimen/sub_title"
                android:drawableLeft="@drawable/ic_add_card"
                android:paddingLeft="30dp"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:drawablePadding="-30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"/>

            <android.widget.Button
                android:id="@+id/editInfo_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/stroke_round"
                android:text="정보 수정"
                android:textSize="@dimen/sub_title"
                android:drawableLeft="@drawable/ic_person"
                android:paddingLeft="30dp"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:drawablePadding="-30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"/>

            <android.widget.Button
                android:id="@+id/transfer_with_picture_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/stroke_round"
                android:text="사진으로 송금하기"
                android:textSize="@dimen/sub_title"
                android:drawableLeft="@drawable/ic_person"
                android:paddingLeft="30dp"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:drawablePadding="-30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                />

            <android.widget.Button
                android:id="@+id/transfer_with_voice_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/stroke_round"
                android:text="음성으로 송금하기"
                android:textSize="@dimen/sub_title"
                android:drawableLeft="@drawable/ic_person"
                android:paddingLeft="30dp"
                android:paddingTop="70dp"
                android:paddingBottom="70dp"
                android:drawablePadding="-30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="50dp"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
