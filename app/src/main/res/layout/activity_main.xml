<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.widget.Button
        android:id="@+id/sound_on_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/stroke_round_navy"
        android:backgroundTint="@null"
        android:text="화면 안내 소리 켜기"
        android:textSize="20sp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/stroke_round"
        android:text="결제하기"
        android:textColor="@color/black"
        android:textSize="@dimen/sub_title"
        android:drawableLeft="@drawable/ic_wallet"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/register_pay_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/stroke_round"
        android:text="결제수단 등록"
        android:textColor="@color/black"
        android:textSize="@dimen/sub_title"
        android:drawableLeft="@drawable/ic_add_card"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/editInfo_btn"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textColor="@color/black"
        android:background="@drawable/stroke_round"
        android:text="정보 수정"
        android:textSize="@dimen/sub_title"
        android:drawableLeft="@drawable/ic_person"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
</LinearLayout>
